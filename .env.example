# Environment Configuration Template for Childcare RAG System

# API Keys (Required - Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
COHERE_API_KEY_2=your_backup_cohere_api_key_here

# Zilliz Cloud Configuration (Required for vector database)
ZILLIZ_URI=your_zilliz_cluster_uri_here
ZILLIZ_TOKEN=your_zilliz_api_token_here

# Chainlit Authentication
CHAINLIT_AUTH_SECRET=your_secure_chainlit_secret_here

# Simple Authentication Credentials
# Format: username:password
AUTH_USER_1=admin:your_strong_admin_password_here
AUTH_USER_2=childcare_expert:your_strong_expert_password_here
AUTH_USER_3=demo_user:your_strong_demo_password_here
AUTH_USER_4=parent_guide:your_strong_user_password_here

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# GPU Configuration (Optional - for local processing)
USE_GPU=true
GPU_DEVICE=0
GPU_MEMORY_LIMIT=3.5

# Vector Database Configuration (Local Milvus - Alternative to Zilliz)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=childcare_documents

# Document Processing
CHUNK_SIZE=1024
CHUNK_OVERLAP=128
MAX_DOCUMENT_SIZE=41943040

# Retrieval Configuration
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7
ADAPTIVE_RETRIEVAL_ENABLED=true

# Web Search Configuration
WEB_SEARCH_ENABLED=true
MAX_WEB_RESULTS=3

# Generation Configuration
MAX_TOKENS=2048
MAX_TOKENS_PER_REQUEST=8192
TEMPERATURE=0.1

# Application Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# Data Paths
PDF_DATA_PATH=../pdfs
PROCESSED_DATA_PATH=./data/processed
NEW_PROCESSED_DATA_PATH=./new_data/processed
NEW_EMBEDDINGS_PATH=./new_data/embeddings
